<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:scrollview"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:bottom_padding="16vp">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <Text
            ohos:id="$+id:text_received_message_title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:text="Last Received Message:"
            ohos:text_size="18fp"
            ohos:top_margin="60fp"
            />

        <Text
            ohos:top_margin="4fp"
            ohos:id="$+id:text_received_message"
            ohos:height="match_content"
            ohos:width="200fp"
            ohos:hint="Nothing received yet"
            ohos:layout_alignment="horizontal_center"
            ohos:text_alignment="center"
            ohos:text_size="15fp"
            ohos:auto_scrolling_count="unlimited"
            ohos:truncation_mode="auto_scrolling"/>

        <Button
            ohos:id="$+id:button_send_message"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:padding="8fp"
            ohos:text="Send Message"
            ohos:top_margin="16fp"/>

        <Text
            ohos:id="$+id:text_received_image_title"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="horizontal_center"
            ohos:text="Last Received Image:"
            ohos:text_size="18fp"
            ohos:top_margin="16fp"
            />

        <Image
            ohos:layout_alignment="horizontal_center"
            ohos:id="$+id:image_received_image"
            ohos:top_margin="16fp"
            ohos:height="match_content"
            ohos:width="match_content"/>

        <Button
            ohos:id="$+id:button_record_audio"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:padding="8fp"
            ohos:text="Record Audio"
            ohos:top_margin="16fp"/>

        <Button
            ohos:id="$+id:button_get_joke"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:padding="8fp"
            ohos:text="Call Internet API"
            ohos:top_margin="16fp"/>

        <Button
            ohos:id="$+id:button_measure_heart_rate"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:padding="8fp"
            ohos:text="Measure Heart Rate"
            ohos:top_margin="16fp"/>

        <Button
            ohos:id="$+id:button_test_text_field"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:background_element="$graphic:background_ability_main"
            ohos:layout_alignment="horizontal_center"
            ohos:padding="8fp"
            ohos:text="Test TextField"
            ohos:bottom_margin="32fp"
            ohos:top_margin="16fp"/>

    </DirectionalLayout>
</ScrollView>